<% layout("/layouts/boilerplate") %>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h3>Edit Your Listing</h3>
            <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" class="needs-validation" novalidate enctype="multipart/form-data">
                <div class="mb-3">
                    <lable for="title" class="form-lable">Title</lable>
                    <input name="listing[title]" value="<%= listing.title %>" class="form-control" required>
                    <div class="invalid-feedback">Title shuld be valide </div>
                </div>
                <div class="mb-3">
                    <lable for="description" class="form-lable">Description</lable>
                    <textarea name="listing[description]" class="form-control" required><%= listing.description %></textarea>
                    <div class="invalid-feedback">Description shuld be valide </div>
                </div>

                 <div class="mb-3">
                   Orignal listing Image
                 <img src="<%= orignalImaageUrl%>"/>
                </div>

                <div class="mb-3">
                    <lable for="image" class="form-lable">Upload New Image</lable>
                    <input name="listing[image]" type="file" class="form-control" required>
                </div>
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <lable for="price" class="form-lable">Price</lable>
                        <input name="listing[price]" value="<%=listing.price %>" type="number" class="form-control" required>
                        <div class="invalid-feedback">Price shuld be valide </div>
                    </div>
                    <div class="mb-3 col-md-8">
                        <lable for="country" class="form-lable">Country</lable>
                        <input name="listing[country]" value="<%=listing.country %>" type="text" class="form-control" required>
                        <div class="invalid-feedback">Country shuld be valide </div>
                    </div>
                </div>
                <div class="mb-3">
                    <lable for="location" class="form-lable">Location</lable>
                    <input name="listing[location]" value="<%=listing.location %>" class="form-control" required>
                    <div class="invalid-feedback">Location shuld be valide </div>
                </div>
                <button class=" btn btn-dark edit-btn mt-3">Edit</button>
                <br><br>
            </form>
        </div>
    </div>