<% layout("/layouts/boilerplate") %>

    <style>
        #filters {
            display: flex;
            flex-wrap: wrap;
            margin-top: 1rem;
        }

        .filter {
            text-align: center;
            margin-right: 1.5rem;
        }

        .filter:hover {
            opacity: 1;
            cursor: pointer;
        }

        .filter p {
            font-size: 0.8rem;
        }

        .tex-info{
          display: none;
        }
        .tex-togale{
            border: 1px solid black;
            border-radius: 1rem;
            height: 3.5rem;
            padding: 1rem;
            margin-left: 5rem;
            display: flex;
            align-items: center;
        }
    </style>
    <div id="filters">
        <div class="filter">
            <div><i class="fa-solid fa-fire"></i></div>
            <p> Trending</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-fire"></i></div>
            <p>Room</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-mountain-city"></i></div>
            <p>Icon Cities</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-mountain"></i></div>
            <p>Mountain</p>
        </div>
        <div class="filter">
            <div><i class="fa-brands fa-fort-awesome"></i></div>
            <p>Castels</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-water-ladder"></i></div>
            <p>Amazign Pools</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-campground"></i></div>
            <p>Camping</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-tractor"></i></div>
            <p>Farms</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-igloo"></i></div>
            <p>Arctics</p>
        </div>
          <div class="filter">
            <div><i class="fa-solid fa-landmark-dome"></i></div>
            <p>Doms</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-sailboat"></i></div>
            <p>Boats</p>
        </div>
        <div class="tex-togale">
            <div class="form-check form-switch form-check-reverse">
                <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
                <label class="form-check-label" for="switchCheckDefault">Display Total After Texes</label>
            </div>
        </div>
    </div>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-2 mt-2 ">
        <% for(let listing of allListings){ %>
            <a href="/listings/<%= listing._id %>" class="listing-link">
                <div class="card col listing-card">
                    <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image"
                        style="height: 20rem;" />
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                        <p class="card-text">
                            <b>
                                <%= listing.title %>
                            </b> <br>
                            &#8377; <%= listing.price.toLocaleString("en-IN") %> / Night
                            <i class="tex-info">&nbsp; &nbsp;+18GST</i>
                        </p>
                    </div>
                </div>
            </a>
            <% } %>
    </div>

    <script>
        let textSwitch = document.getElementById("switchCheckDefault");
        textSwitch.addEventListener("click", ()=>{
            let texInfo = document.getElementsByClassName("tex-info");
            for (info of texInfo){
                if(info.style.display != "inline"){
                info.style.display = "inline"
                }else{
                    info.style.display = "none"
                }
            }
        });
    </script>