<% layout("/layouts/boilerplate") %>
    <div class="row">
        <div class="col-8 offset-2 mt-3" <h3>Creat a New Listing</h3>
            <form method="POST" action="/listings" class="needs-validation" novalidate 
                enctype="multipart/form-data">
                <div class="mb-3">
                    <lable for="title" class="form-lable">Title</lable>
                    <input name="listing[title]" placeholder="Enter title" type="text" class="form-control" required</input>
                    <div class="valid-feedback">Title looks good! </div>   
                </div>
                <div class="mb-3">
                    <lable for="description" class="form-lable">Descriptions</lable>
                    <textarea name="listing[description]" placeholder="Enter description" class="form-control" required></textarea>
                    <div class="invalid-feedback">Price shuld be valide </div>
                </div>

                 <div class="mb-3">
                    <lable for="image" class="form-lable">Upload Listing Image</lable>
                    <input name="listing[image]"  type="file" 
                    class="form-control"  required/>
                   
                </div>

                <div class="row">
                    <div class="mb-3 col-md-4">
                        <lable for="price" class="form-lable">Price</lable>
                        <input name="listing[price]" placeholder="Enter price" class="form-control" required>
                        <div class="invalid-feedback">Price shuld be valide </div>
                    </div>
                    <div class="mb-3 col-md-8">
                        <lable for="country" class="form-lable">Country</lable>
                        <input name="listing[country]" placeholder="Enter country" class="form-control" required>
                         <div class="invalid-feedback">Country shuld be valide </div> 
                    </div>
                </div>
                <div class="mb-3">
                    <lable for="location" class="form-lable">Location</lable>
                    <input name="listing[location]" placeholder="Enter location" class="form-control" required>
                    <div class="invalid-feedback">Location shuld be valide </div>
                </div>
                <button class="btn btn-dark add-btn mt-3">Add</button>
            </form>
        </div>
    </div>